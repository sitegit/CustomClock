<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.customclock.ClockView
        android:id="@+id/clockView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clockRingWidth="10dp"
        app:defaultLength="10dp"
        app:defaultWidth="2dp"
        app:specialLength="15dp"
        app:specialWidth="4dp"
        app:hourHandWidth="6dp"
        app:minuteHandWidth="4dp"
        app:secondHandWidth="2dp"/>

</FrameLayout>